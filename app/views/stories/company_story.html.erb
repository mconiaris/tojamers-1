<div class="text-center">

COMPANY STORY
</br>
<%= @story.business_name %>
</div>

Business Name:
<%= @story.business_name %></br>
<%= image_tag(@story.logo_url) %></br>
Business Location:
<%= @story.business_location %></br>
Business Description:
<%= @story.business_description %></br>
Industry:
<%= @story.industry %></br>
Founders:
<%= @story.founders %></br>
Size:
<%= @story.size %></br>
Year founded:
<%= @story.year_founded %></br>
</br></br><br><br>
PITCHES FOR THIS STORY
</br>
<% @story.pitches.each do |pitch| %>
  <%= link_to(pitch[:body], story_pitch_path(@story, pitch)) %>
  </br>
<% end %>
</br>
<% if authorized? || admin? %>
  <%= link_to("Edit this story", edit_story_path(@story)) %>
  </br>
  <%= link_to("Make a new pitch for this story", new_story_pitch_path(@story)) %>
  </br>
  <%= link_to 'Delete this story', @story, method: :delete, data: { confirm: "Are you sure you want to delete this story? It can't be undone!"  } %>
  </br>
<% end %>
<%= link_to 'Back', :back %>

</div>
